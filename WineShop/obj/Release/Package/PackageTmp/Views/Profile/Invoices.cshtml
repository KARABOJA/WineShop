@model WineShop.Models.Customer
<!-- Page Title-->
<div class="page-title">
    <div class="container">
        <div class="column">
            <h1>Mes Factures</h1>
        </div>
        <div class="column">
            <ul class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">Accueil</a>
                </li>
                <li class="separator">&nbsp;</li>
                <li>
                    <a href="@Url.Action("Profile","Profile")">Profile</a>
                </li>
                <li class="separator">&nbsp;</li>
                <li>Mes Factures</li>
            </ul>
        </div>
    </div>
</div>
<!-- Page Content-->
<div class="container padding-bottom-3x mb-2">
    <div class="row">
        <div class="col-lg-12">
            <div class="padding-top-2x mt-2 hidden-lg-up"></div>

            <div class="table-responsive">
                <!--    Tableau de Bon de commande    -->
                <table class="table table-hover margin-bottom-none">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Date Fac</th>
                            <th>Etat</th>
                            <th>Total H.T.</th>
                            <th>Total T.V.A.</th>
                            <th>Total T.T.C.</th>
                            <th>Frais Liv.</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (WineShop.Models.CustomerInvoice item in WineShop.Models.CustomerInvoices.GetDataByUidCustomer(Model.Uid))
                        {
                            <tr>
                                <td><a class="text-medium navi-link" href="#" data-toggle="modal" data-target="#orderDetails">@(item.NumInvoice)</a></td>
                                <td>@(item.DtOrdered)</td>
                                <td><span class="text-danger">@(item.StateDescription)</span></td>
                                <td><span class="text-medium">@(item.Amount.ToString(WineShop.Tools.Framework.PriceFormat)) @(item.CurrenctSymbole)</span></td>
                                <td><span class="text-medium">@(item.AmountVAT.ToString(WineShop.Tools.Framework.PriceFormat)) @(item.CurrenctSymbole)</span></td>
                                <td><span class="text-medium">@(item.AmountATI.ToString(WineShop.Tools.Framework.PriceFormat)) @(item.CurrenctSymbole)</span></td>
                                <td><span class="text-medium">@(item.AmountShipping.ToString(WineShop.Tools.Framework.PriceFormat)) @(item.CurrenctSymbole)</span></td>
                                <td><span class="text-medium">@(item.AmountATIFinal.ToString(WineShop.Tools.Framework.PriceFormat)) @(item.CurrenctSymbole)</span></td>
                                <td><a href="@Url.Action("Invoice","Files", new { @num=item.NumInvoice})" target="_blank"><i class="fa fa-file-pdf-o"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
