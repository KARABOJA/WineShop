<!-- Page Title-->
<div class="page-title">
    <div class="container">
        <div class="column">
            <h1>Panier</h1>
        </div>
        <div class="column">
            <ul class="breadcrumbs">
                <li>
                    <a href="@Url.Action("Index","Home")">Accueil</a>
                </li>
                <li class="separator">&nbsp;</li>
                <li>Panier</li>
            </ul>
        </div>
    </div>
</div>
<!-- Page Content-->
<div class="container padding-bottom-3x mb-1">
    <!-- Alert-->
    <!--    <div class="alert alert-info alert-dismissible fade show text-center" style="margin-bottom: 30px;"><span class="alert-close" data-dismiss="alert"></span><img class="d-inline align-center" src="data:image/svg+xml;utf8;base64," width="18" height="18" alt="Medal icon">&nbsp;&nbsp;With this purchase you will earn <strong>290</strong> Reward Points.</div>-->
    <!-- Shopping Cart-->
    <div class="table-responsive shopping-cart">
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th class="text-center">Quantité</th>
                    <th class="text-center">Sous-Total</th>
                    <th class="text-center">Remise</th>
                    <th class="text-center"><button class="btn btn-sm btn-outline-danger btn-clear-basket">Vider le Panier</button></th>
                </tr>
            </thead>
            <tbody>
                @foreach (WineShop.Models.Basket item in WineShop.Models.Baskets.GetData())
                {
                    <tr>
                        <td>
                            <div class="product-item">
                                <a class="product-thumb" href="@Url.Action("Article","Articles",new { @id =item.CodeProduct})"><img src="/Images/Shop/Products/@(item.CodeProduct).jpg" alt="Product"></a>
                                <div class="product-info">
                                    <h4 class="product-title"><a href="@Url.Action("Article","Articles",new { @id =item.CodeProduct})">@(item.Description)</a></h4><span><em>Size:</em> @(item.Size)</span><span><em>Color:</em> @(item.Color)</span>
                                </div>
                            </div>
                        </td>
                        <td class="text-center"><button class="btn btn-outline-success btn-add-basket" uid="@(item.Uid)">+</button>@(item.Quantity)<button class="btn btn-outline-danger btn-remove-basket" uid="@(item.Uid)">-</button></td>
                        <td class="text-center text-lg text-medium">@(item.AmountATI.ToString(WineShop.Tools.Framework.PriceFormat)) @(WineShop.Tools.App.Currency.GetCurrent().Symbol)</td>
                        <td class="text-center text-lg text-medium"></td>
                        <td class="text-center"><a class="remove-from-cart btn-remove-basket" uid="@(item.Uid)" href="#" data-toggle="tooltip" title="Remove item"><i class="icon-cross"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="shopping-cart-footer">
        <div class="column text-lg">Total: <span class="text-medium">@(WineShop.Models.Baskets.GetAmountATI().ToString(WineShop.Tools.Framework.PriceFormat)) @(WineShop.Tools.App.Currency.GetCurrent().Symbol)</span></div>
    </div>
    <div class="shopping-cart-footer">
        <div class="column"><a class="btn btn-outline-secondary" href="@Url.Action("Index","Home")"><i class="icon-arrow-left"></i>&nbsp;Retour a l'Accueil</a></div>
        <div class="column">
            <a class="btn btn-primary" href="#" data-toast data-toast-type="success" data-toast-position="topRight" data-toast-icon="icon-circle-check" data-toast-title="Your cart" data-toast-message="is updated successfully!">Actualiser votre panier</a>
            @if (WineShop.Models.Baskets.Count > 0)
            {
                <a class="btn btn-success" href="@Url.Action("CheckoutAddressInvoice", "Home")">Commander</a>
            }
        </div>
    </div>
    <!-- Related Products Carousel-->
    <!-- Carousel-->
</div>
