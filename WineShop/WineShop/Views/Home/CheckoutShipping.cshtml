@model WineShop.Models.Views.ModelCheckoutShipping
<div class="offcanvas-wrapper">
    <!-- Page Title-->
    <div class="page-title">
        <div class="container">
            <div class="column">
                <h1>Mode de livraison</h1>
            </div>
            <div class="column">
                <ul class="breadcrumbs">
                    <li>
                        <a href="index.html">Acceuil</a>
                    </li>
                    <li class="separator">&nbsp;</li>
                    <li>Mode de livraison</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Page Content-->
    <div class="container padding-bottom-3x mb-2">
        @using (Html.BeginForm("CheckoutShipping", "Post", FormMethod.Post, new { @class = "login-box" }))
        {
            <div class="row">
                <!-- Checkout Adress-->
                <div class="col-xl-9 col-lg-8">
                    <div class="checkout-steps">
                        <a>5. Résumé</a>
                        <a><span class="angle"></span>4. Paiment</a>
                        <a class="active"><span class="angle"></span>3. Mode Liv.</a>
                        <a class="completed" href="@Url.Action("CheckoutAddressDelivery","Home")"><span class="angle"></span><span class="step-indicator icon-circle-check"></span>2. Adresse Liv.</a>
                        <a class="completed" href="@Url.Action("CheckoutAddressInvoice","Home")"><span class="angle"></span><span class="step-indicator icon-circle-check"></span>1. Adresse Fac.</a>
                    </div>
                    <h4>Choisire un mode de livraison</h4>
                    <hr class="padding-bottom-1x">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-default">
                                <tr>
                                    <th>Mode de livraison</th>
                                    <th>Temps de livraison</th>
                                    <th>Frais de gestion</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="align-middle"><span class="text-medium">Courrier</span><br><span class="text-muted text-sm">Toutes Adresses(Zone par défaut), France & Europe</span></td>
                                    <td class="align-middle">2 - 4 Jours</td>
                                    <td class="align-middle">€22.50</td>
                                    <td class="align-middle">
                                        <label class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="ShippingMode" data-val="true" id="chkPost" value=0 @(Model.ShippingMode.Equals(0)?"checked":"")><span class="custom-control-indicator"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="align-middle"><span class="text-medium">Collisimo</span><br><span class="text-muted text-sm">Toutes Adresses(Zone par défaut), France & Europe</span></td>
                                    <td class="align-middle">Jusqu'a une semaine</td>
                                    <td class="align-middle">€10.00</td>
                                    <td class="align-middle">
                                        <label class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="ShippingMode" data-val="true" id="chkCollisimo" value=1 @(Model.ShippingMode.Equals(1)?"checked":"")><span class="custom-control-indicator"></span>
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="align-middle"><span class="text-medium">UPS</span><br><span class="text-muted text-sm">Toutes Adresses(Zone par défaut), France & Europe</span></td>
                                    <td class="align-middle">5 - 7 Jours</td>
                                    <td class="align-middle">€33.85</td>
                                    <td class="align-middle">
                                        <label class="custom-control custom-radio">
                                            <input class="custom-control-input" type="radio" name="ShippingMode" data-val="true" id="chkUPS" value=2 @(Model.ShippingMode.Equals(2)?"checked":"")><span class="custom-control-indicator"></span>
                                        </label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="checkout-footer margin-top-1x">
                        <div class="column"><a class="btn btn-outline-secondary" href="@Url.Action("CheckoutAddressDelivery","Home")"><i class="icon-arrow-left"></i><span class="hidden-xs-down">&nbsp;Retour à l'adresse de livraison</span></a></div>
                        <div class="column"><button class="btn btn-primary" type="submit"><span class="hidden-xs-down">Continue&nbsp;</span><i class="icon-arrow-right"></i></button></div>
                    </div>
                </div>
                <!-- Sidebar          -->
                <div class="col-xl-3 col-lg-4">
                    <aside class="sidebar">
                        <div class="padding-top-2x hidden-lg-up"></div>
                        <!-- Order Summary Widget-->
                        <section class="widget widget-order-summary">
                            <h3 class="widget-title">Resumé de votre commande</h3>
                            <table class="table">

                                <tr>
                                    <td>
                                        Sous-total du panier:@WineShop.Models.Baskets.GetAmount() €
                                    </td>
                                </tr>
                                <tr>
                                    <td>Tax Estimée:@WineShop.Models.Baskets.GetAmountVAT() €</td>
                                </tr>
                                <tr>
                                    <td>Total T.T.C.:@WineShop.Models.Baskets.GetAmountATI() €</td>
                                </tr>
                                <tr>
                                    <td>Frais de Livraison: @WineShop.Models.Baskets.GetAmountShipping() €</td>
                                </tr>
                                <tr>
                                    <td class="text-lg text-medium">Net à payer : @WineShop.Models.Baskets.GetAmountATIFinal() € </td>
                                </tr>

                            </table>
                        </section>
                        <!-- Featured Products Widget-->
                        <!-- Promo Banner-->
                    </aside>
                </div>
            </div>
        }
    </div>
</div>
